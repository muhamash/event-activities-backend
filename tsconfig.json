{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "incremental": true,
    "noEmit": false,
    "noEmitOnError": false,
    "isolatedModules": false,
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    // "typeRoots": [ "./src/config/interface/index.d.ts", "./node_modules/@types", "src/config/interfaces/index.d.ts" ]
  },
  // "include": [ "src/**/*", "src/config/interfaces/index.d.ts" ],
  "exclude": [ "node_modules", "dist" ]
}